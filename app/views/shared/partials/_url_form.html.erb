<% record.urls.each do |url| %>
  <div id="nested-web-urls">
    <%= form.fields_for :urls, url do |furl|  %>
      <div id="nested-web-url-form">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="description">Url</label>
              <%= furl.text_field :url, class: "form-control" %>
            </div>
          </div>

          <div class="col-lg-6">
            <div class="form-group">
              <label for="description">Beschreibung</label>
              <%= furl.text_field :description, class: "form-control" %>
            </div>
          </div>
        </div>

        <input type="button" value="Webseite entfernen" class="remove btn btn-sm btn-danger">
        <hr />
      </div>
    <% end %>
  </div>
<% end %>
