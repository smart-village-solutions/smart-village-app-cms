<div class="row">
  <div class="col">
    <h3 class="d-sm-flex align-items-center justify-content-between my-5">
      Links
    </h3>
  </div>
</div>

<% list_of_urls = record.urls.presence || [OpenStruct.new] %>
<% list_of_urls.each_with_index do |url, index| %>
  <div id="nested-web-urls">
    <%= fields_for "event[urls][#{index}]", url do |furl|  %>
      <div id="nested-web-url-form">


<div class="card mb-4">
  <div class="card-header py-3  bg-dark text-white">
      <h4 class="m-0 d-sm-flex align-items-center justify-content-between float-left">
      Link
      </h4  >
      <input type="button" value="diesen Link entfernen" class="removeContent btn btn-sm btn-danger float-right ">

    </div>
    <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="description">URL</label>
              <%= furl.text_field :url, class: "form-control" %>
            </div>
          </div>

          <div class="col-lg-6">
            <div class="form-group">
              <label for="description">Linktext</label>
              <%= furl.text_field :description, class: "form-control" %>
            </div>
          </div>
        </div>

      
      </div></div>
    <% end %>
  </div>
<% end %>

