<% list_of_categories = record.categories.presence || [OpenStruct.new] %>

<div id="nested-categories">
  <% list_of_categories.each_with_index do |category, index| %>
    <%= form.fields_for "categories[#{index}]", category do |fcb| %>
      <div class="nested-category-form">
        <div class="card mb-4">
          <div class="card-header py-3  bg-dark text-white">
            <h3 class="m-0 font-weight-bold d-sm-flex align-items-center justify-content-between float-left">
              Kategorie
            </h3>
            <input
              type="button"
              value="diesen Kategorie entfernen"
              class="float-right remove btn btn-sm btn-danger"
            />
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col">
                <div class="form-group">
                  <label for="description">Name</label>
                  <%= fcb.select :name, options_for_select(@categories.map(&:name), fcb.object.name), {}, {class: "form-control", include_blank: true } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
