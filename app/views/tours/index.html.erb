<div class="d-flex align-items-center justify-content-between mb-5">
  <h1 class="h3 mb-0 pb-0 font-weight-bold">Touren</h1>
  <%= link_to new_tour_path,  class: "btn btn-sm btn-primary shadow-sm ml-3" do %>
    <i class="fas fa-plus fa-sm text-white-50"></i>
    Neue Tour erstellen
  <% end %>
</div>

<div class="table-responsive pb-4">
  <table class="table data_table bg-white">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Überschrift</th>
        <th scope="col">Änderungsdatum</th>
        <th scope="col">Erstellungsdatum</th>
        <% if editor? %>
          <th>Datenquelle</th>
          <th scope="col" class="nosort">Sichtbarkeit</th>
        <% end %>
        <th scope="col" class="nosort">Aktionen</th>
      </tr>
    </thead>
    <tbody>
      <% @tours.each do |tour| %>
        <tr>
          <th scope="row"><%= tour.id %></th>
          <td><%= link_to tour.name, edit_tour_path(tour.id) %></td>
          <td><%= toLocalDateTime(tour.updated_at) %></td>
          <td><%= toLocalDateTime(tour.created_at) %></td>
          <% if editor? %>
            <td><%= tour.data_provider.name %></td>
            <td align="center"><%= visibility_switch(tour, "Tour") %></td>
          <% end %>
          <td align="right" class="text-nowrap">
            <%= link_to "Bearbeiten", edit_tour_path(tour.id), class: "btn btn-sm btn-secondary" %>
            <%= link_to tour_path(tour.id), method: :delete, "data-confirm" => "Diesen Eintrag wirklich löschen?", class: "btn btn-sm btn-danger", title: "Löschen" do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
